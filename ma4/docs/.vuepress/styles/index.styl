*{
    margin: 0;
    padding: 0;
    font-family: Consolas,Monaco,Andale Mono,Ubuntu Mono,monospace;
}
body{
    font: 20px/1.5 Open Sans,sans-serif;
    color: rgba(0,0,0,.8);
    margin: 0;
    /* -webkit-font-smoothing: antialiased; */
    -moz-osx-font-smoothing: grayscale;
}
.theme-default-content code{
    color: #c7254e!important;
    background-color: #f9f2f4!important;
    }
.theme-default-content pre code, 
.theme-default-content pre[class*="language-"] code{
    color: #fff!important;
    background-color: transparent!important;
}
.theme-default-content p.tip,
.theme-default-content p.success {
    padding: 12px 24px 12px 30px;
    margin: 2em 0;
    border-left-width: 4px;
    border-left-style: solid;
    background-color: #f8f8f8;
    position: relative;
    border-bottom-right-radius: 2px;
    border-top-right-radius: 2px;
}
.theme-default-content p.tip {
    border-left-color: #f66;
}

.theme-default-content p.tip:before,
.theme-default-content p.success:before {
    position: absolute;
    top: 14px;
    left: -12px;
    color: #fff;
    width: 20px;
    height: 20px;
    border-radius: 100%;
    text-align: center;
    line-height: 20px;
    font-weight: bold;
    font-family: "Dosis", "Source Sans Pro", "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
}
.theme-default-content p.tip:before {
    content: "!";
    background-color: #f66;
}
// narrow mobile
@media (max-width: 419px){
    .theme-default-content{
        div[class*="language-"]{
            margin: 0 !important;
        }
    }
}
.page{
    padding: 0}
.theme-default-content  > p,
.theme-default-content > ul{
    margin-bottom: 20px;}
.theme-default-content:not(.custom){
    max-width: 660px;
    padding:6rem 12px;
    }
.page-nav{
    display: none;}
.theme-default-content:not(.custom) > h1, 
.theme-default-content:not(.custom) > h2, 
.theme-default-content:not(.custom) > h3, 
.theme-default-content:not(.custom) > h4, 
.theme-default-content:not(.custom) > h5, 
.theme-default-content:not(.custom) > h6 {
    margin-top: 0;
    padding: 1rem 0;
    margin-bottom: 0;
}
@media screen and (max-width: 1300px) {
  .theme-default-content {
    margin-left: 290px!important;
  }
  #ad {
    z-index: 1;
    position: relative;
    padding: 0;
    bottom: 0;
    right: 0;
    float: right;
    padding: 0 0 20px 30px;
  }
}
@media screen and (max-width: 900px) {
      .theme-default-content {
    margin: 0 auto!important;
  }
  .sidebar {
    top: 0;
    padding-top: 3.6rem;
    transform: translateX(-100%);
    transition: transform 0.2s ease;
}

}
.sidebar{
    max-width: 16rem
}